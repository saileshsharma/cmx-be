{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "panels": [
    {
      "type": "row",
      "title": "System & App Metrics (Prometheus / Micrometer)",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "collapsed": false,
      "panels": []
    },
    {
      "id": 1,
      "type": "stat",
      "title": "Process CPU (%)",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prom" },
      "targets": [
        {
          "expr": "avg(process_cpu_usage) * 100",
          "legendFormat": "CPU",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      },
      "fieldConfig": {
        "defaults": { "unit": "percent", "decimals": 1 },
        "overrides": []
      }
    },
    {
      "id": 2,
      "type": "gauge",
      "title": "JVM Heap Used (%)",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prom" },
      "targets": [
        {
          "expr": "100 * sum(jvm_memory_used_bytes{area=\"heap\"}) / sum(jvm_memory_max_bytes{area=\"heap\"})",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "decimals": 0, "min": 0, "max": 100 },
        "overrides": []
      },
      "options": {
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "RPS (All services)",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prom" },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count[1m]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "req/s", "decimals": 2 },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }
      }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Error Rate (%)",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 1 },
      "datasource": { "type": "prometheus", "uid": "prom" },
      "targets": [
        {
          "expr": "100 * ( sum(rate(http_server_requests_seconds_count{status=~\"5..\"}[5m])) / sum(rate(http_server_requests_seconds_count[5m])) )",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "percent", "decimals": 2 },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    },
    {
      "id": 5,
      "type": "timeseries",
      "title": "p95 HTTP Latency (s)",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 7 },
      "datasource": { "type": "prometheus", "uid": "prom" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket[5m])) by (le))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s", "decimals": 3 },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "id": 6,
      "type": "timeseries",
      "title": "Requests by Status (RPS)",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 7 },
      "datasource": { "type": "prometheus", "uid": "prom" },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count[1m])) by (status)",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "req/s" },
        "overrides": []
      }
    },
    {
      "type": "row",
      "title": "Traces (Tempo)",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 15 },
      "collapsed": false,
      "panels": []
    },
    {
      "id": 7,
      "type": "table",
      "title": "Recent Traces (TraceQL)",
      "description": "Requires Tempo. Adjust the service name variable if needed.",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 16 },
      "datasource": { "type": "tempo", "uid": "tempo" },
      "targets": [
        {
          "queryType": "traceql",
          "refId": "A",
          "query": "{ service.name = \"$tempo_service\" }"
        }
      ],
      "options": {
        "showHeader": true
      },
      "transformations": [],
      "fieldConfig": { "defaults": {}, "overrides": [] }
    }
  ],
  "refresh": "10s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["CMX", "observability"],
  "templating": {
    "list": [
      {
        "name": "job",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "prom" },
        "refresh": 2,
        "query": "label_values(http_server_requests_seconds_count, job)",
        "includeAll": false,
        "multi": false,
        "current": { "selected": false, "text": "All", "value": "" }
      },
      {
        "name": "tempo_service",
        "type": "custom",
        "query": "cmx-be,cmx-dispatcher,cmx-ui",
        "current": { "selected": true, "text": "cmx-be", "value": "cmx-be" }
      }
    ]
  },
  "time": { "from": "now-30m", "to": "now" },
  "timezone": "",
  "title": "CMX â€¢ Observability (Prometheus + Tempo)",
  "version": 1,
  "weekStart": ""
}
